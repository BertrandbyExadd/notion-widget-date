      margin: 0 auto;
    }

    .top{
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      gap: 12px;
    }

    .title{
      font-weight: 800;
      font-size: 16px;
      letter-spacing: .2px;
      margin: 0 0 2px 0;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      max-width: 340px;
    }

