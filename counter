      font-size: 12.5px;
      color: var(--muted);
      margin: 0;
    }

    .pill{
      flex: 0 0 auto;
      font-weight: 800;
      font-size: 13px;
      padding: 8px 10px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,.25);
      background: rgba(255,255,255,.10);
      color: var(--text);
      white-space: nowrap;
    }

    .divider{
      height: 1px;
      background: rgba(255,255,255,.18);
